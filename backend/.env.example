# Environment variables for Adaptive CV backend
# Replace with your actual API keys in production

# OpenAI API Key for CV generation
OPENAI_API_KEY="your-openai-api-key"

# Environment setting - determines database type
ENV="production"

# Database settings (PostgreSQL for production)
DATABASE_URL="postgresql://username:password@localhost:5432/database_name"

# Server settings
HOST="0.0.0.0"
PORT=8000
DEBUG=false

# Authentication settings
LOCAL_TEST_USER="guest@example.com"
FRONTEND_URL="http://localhost:5173"
API_BASE_URL="http://localhost:8000"

# Google OAuth settings
GOOGLE_CLIENT_ID="your-google-client-id"
GOOGLE_CLIENT_SECRET="your-google-client-secret"
